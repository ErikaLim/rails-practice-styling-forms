<%= form_for @person, html: {class: "form-horizontal"} do |f| %>
    <% if @person.errors.any? %>
      <div id="error_explanation" class ="col-sm-offset-2 alert alert-danger" role="alert">
        <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>
        <ul>
          <% @person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :first_name, class: "form-control", id: "first_name"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :last_name, class: "form-control", id: "last_name"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :date_of_birth, class:"col-sm-2 control-label" %>
      <div class="col-sm-2">
        <%= f.date_field :date_of_birth, class: "form-control", id: "date_of_birth" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :bio, class: "col-sm-2 control-label" %>
      <div class ="col-sm-6">
        <%= f.text_area :bio, class: "form-control", rows: "3", id: "bio" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="checkbox"> Active
      </div>
    </div>
    <div class="form-group">
      <div class="actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-info"%>
          <%= link_to "Cancel", people_path, class:"btn btn-default" %>
        </div>
      </div>
    </div>
  <% end %>
